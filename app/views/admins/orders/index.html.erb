<h1>注文履歴一覧</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order.id) %></td>
            <td><%= "#{order.customer.family_name}　#{order.customer.first_name}" %></td>
            <td><%= order.total_quantity %></td>
            <td><%= order.status_i18n %></td>
        </tr>
    <% end %>
    </tbody>
</table>