<h4>商品新規登録</h4>

<%= form_with model: @product, url: admins_products_path, method: :post, local: true do |f| %>
	<%= f.attachment_field :image %>

	<p>商品名</p>
	<%= f.text_field :name %>

	<p>商品説明</p>
	<%= f.text_area :description %>

	<p>ジャンル</p>
	<%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: '選択してください'} %>

	<p>税抜価格</p>
	<%= f.text_field :price %>円

	<p>販売ステータス</p>
	<%= f.select :status, {'販売中': true, '販売停止': false }, { include_blank: '選択してください'} %>

	<%= f.submit "新規登録" %>

<% end %>
