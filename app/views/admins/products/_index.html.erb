<%= link_to new_admins_product_path do %>
<button type="button" class="add">＋</button>
<% end %>
<table class="table">
	<thead>
		<tr>
			<th>商品ID</th>
		    <th>商品名</th>
		    <th>税抜価格</th>
		    <th>ジャンル</th>
		    <th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= link_to product.name, admins_product_path(product.id) %></td>
			<td><%= product.price %></td>
			<td><%= product.genre.name %></td>
			<td>
				<% if product.status == true %>
				販売中
				<% else %>
				販売停止
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>