<div class="row">
	<div class="col-xs-7">
		<h4>注文情報</h4>
		<table class="table table-bordered">
				<tr>
					<th>注文日</th>
					<td><%= @order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td>
						<%= @order.shipping_postcode %></br>
						<%= @order.shipping_address %></br>
						<%= @order.shipping_name %>
					</td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= @order.status_i18n %></td>
				</tr>
		</table>
	</div>
	<div class="col-xs-4">
		<h4>請求情報</h4>
		<table class="table table-bordered">
				<tr>
					<th>商品合計</th>
					<% total_product_price = 0 %>
					<% @order_products.each do |order_product| %>
					<% total_product_price += order_product.subtotal_price %>
					<% end %>
					<td><%= total_product_price %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%= @order.shippings %></td>
				</tr>
				<tr>
					<th>請求金額</th>
					<td><%= @order.total_price %></td>
				</tr>
		</table>
	</div>
</div>
	<div class="row">
		<div class="col-xs-8">
			<h4>注文内容</h4>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order_products.each do |order_product| %>
					<tr>
						<td><%= order_product.product.name %></td>
						<td><%= order_product.tax_price.floor %></td>
						<td><%= order_product.quantity %></td>
						<td><%= order_product.subtotal_price %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>