<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
<!-- name入力フォーム -->
  <div class="field">
    <p>名前(姓)</p>
    <%= f.text_field :family_name, autofocus: true, class: "family_name" %>
  </div>
  <div class="field">
    <p>名前(名)</p>
    <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
  </div>
  <div class="field">
    <p>名前(姓)(フリガナ)</p>
    <%= f.text_field :family_name_ruby, autofocus: true, class: "family_name_ruby" %>
  </div>
  <div class="field">
    <p>名前(名)(フリガナ)</p>
    <%= f.text_field :first_name_ruby, autofocus: true, class: "first_name_ruby" %>
  </div>

  <!-- email入力フォーム -->
  <div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>

  <!-- 電話番号入力フォーム -->
  <div class="field">
    <p>電話番号</p>
    <%= f.text_field :tell_number, autofocus: true, class: "tell_number" %>
  </div>

  <!-- 郵便番号入力フォーム -->
  <div class="field">
     <p>郵便番号</p>
     <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "postcode" %>
  </div>

  <!-- 住所入力フォーム -->
  <div class="field">
       <p>住所</p>
       <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "address" %>
  </div>

  <!-- パスワード入力フォーム -->
  <div class="field">
    <p>パスワード</p>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>


<!--パスワード確認入力フォーム-->
  <div class="field">
    <p>パスワード確認</p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
